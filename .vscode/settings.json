{
    // Markdown-Einstellungen
    "markdown.preview.breaks": true,
    "markdown.extension.toc.updateOnSave": true,
    "markdown.extension.toc.levels": "1..6",
    "markdown.extension.toc.orderedList": false,
    "markdownlint.config": {
        "default": true,
        "MD013": false,
        "MD033": false
    },
    "markdown-preview-enhanced.previewTheme": "github-dark.css",
    "markdown-preview-enhanced.enableScriptExecution": true,
    "[markdown]": {
        "editor.defaultFormatter": "yzhang.markdown-all-in-one"
    },
    // LaTeX-Einstellungen
    "latex-workshop.latex.autoBuild.run": "onSave",
    "latex-workshop.viewer.pdf.internal.synctex.keybinding": "double-click",
    // Git-Einstellungen
    "gitlens.hovers.enabled": true,
    "gitlens.codeLens.enabled": true,
    // C++-Einstellungen
    "C_Cpp.intelliSenseEngine": "default",
    "C_Cpp.default.includePath": [
        "${workspaceFolder}/**",
        "/usr/local/include",
        "/Library/Developer/CommandLineTools/usr/include/c++/v1",
        "/Library/Developer/CommandLineTools/SDKs/MacOSX.sdk/usr/include"
    ],
    "C_Cpp.default.macFrameworkPath": [
        "/Library/Developer/CommandLineTools/SDKs/MacOSX.sdk/System/Library/Frameworks"
    ],
    "C_Cpp.default.compilerPath": "/usr/bin/clang++",
    "C_Cpp.default.cStandard": "c11",
    "C_Cpp.default.cppStandard": "c++17",
    "C_Cpp.default.intelliSenseMode": "clang-x64",
    // Python-Einstellungen
    "python.defaultInterpreterPath": "/Users/jan/anaconda3/envs/mein_projekt_env/bin/python3",
    "python.formatting.provider": "black",
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "jupyter.jupyterServerType": "local",
    "jupyter.notebookFileRoot": "${workspaceFolder}",
    // Allgemeine Editor-Einstellungen
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
    },
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,
    "editor.fontSize": 13,
    "window.zoomLevel": 1,
    // Prettier-Einstellungen
    "prettier.singleQuote": true,
    "prettier.trailingComma": "all",
    // Pfad-Einstellungen
    "path-intellisense.mappings": {
        "/": "${workspaceRoot}"
    },
    // EditorConfig-Einstellungen
    "editorconfig.enable": true,
    // JSON-Einstellungen
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    // Einstellungssynchronisation
    "settingsSync.ignoredSettings": []
}